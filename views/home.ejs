<%- include('partials/head') %>
    </head>

    <body>
        <%- include('partials/nav') %>
            <main class="container mx-auto bg-white shadow-lg rounded-lg p-8 mt-10 max-w-xl">
                <h2 class="text-3xl text-red-500 font-bold text-center mb-6">
                    Here are our registered homes:
                </h2>
                <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
                    <% registeredHomes.forEach(home=> { %>
                        <div
                            class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-lg transition duration-300">
                            <img src="<%= home.imageUrl %>" alt="<%= home.houseName %>"
                                class="w-full h-48 object-cover">
                            <div class="p-4">
                                <h3 class="text-xl font-semibold text-gray-800 mb-2">
                                    <%= home.houseName%>
                                </h3>
                                <p class="text-gray-600 mb-2">
                                    <i class="fas fa-map-market-alt mr-2"></i>
                                    <%= home.location %>
                                </p>
                                <div class="flex justify-between items-center mb-2">
                                    <span class="text-lg font-bold text-red-500">Rs
                                        <%= home.price %>/night
                                    </span>
                                    <span class="text-gray-700">
                                        <%= home.rating %>
                                    </span>
                                </div>
                            </div>
                        </div>
                        <% }) %>
                </div>
            </main>
    </body>

    </html>